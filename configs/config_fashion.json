{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "MnistCNNModel",
        "args": {}
    },
    "data_loader": {
        "type": "FashionMnistDataLoader",
        "args":{
            "data_dir": "/Users/data",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2,
            "training": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "experiments/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "experiments/runs"
    }
}
